marker
>>>>>>>>
  COPY ~.../inline/marker.dat~ ~override/a7_csmain.mrk~

  ACTION_IF (~%WEIDU_OS%~ STR_EQ ~win32~) BEGIN
    AT_EXIT ~del /f /q override\a7_csmain.mrk >nul 2>&1~
  END ELSE BEGIN
    AT_EXIT ~rm -f override/a7_csmain.mrk >/dev/null 2>&1~
  END


